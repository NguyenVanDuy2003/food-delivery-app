<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_image"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#ffffff"
                android:padding="14px"
                android:text="Skip"
                android:textColor="#FE724C"
                android:textSize="14sp"
                tools:ignore="HardcodedText,PxUsage" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="40dp"
                android:text="Welcome to"
                android:textColor="#111719"
                android:textSize="53sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="FoodHub"
                android:textColor="#FE724C"
                android:textSize="45sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:gravity="start"
                android:paddingTop="19px"
                android:text="Your favourite foods delivered fast at your door."
                android:textColor="#30384F"
                android:textSize="18sp"
                tools:ignore="HardcodedText,PxUsage" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scrollbarSize="4dp"
                android:textSize="16sp"
                android:text="Sign in with"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_facebook"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="54dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#ffffff"
                android:drawableLeft="@drawable/icon_fb"
                android:drawablePadding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="FACEBOOK"
                android:textColor="#000000"
                android:textFontWeight="400"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

            <Button
                android:id="@+id/btn_google"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="54dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#ffffff"
                android:drawableLeft="@drawable/icon_gg"
                android:drawablePadding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="GOOGLE"
                android:textColor="#000000"
                android:textFontWeight="400"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#33FFFFFF"
            android:padding="12dp"
            android:text="Start with email or phone"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textFontWeight="500"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_already_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#FFFFFF"
                android:textFontWeight="400"
                android:textSize="16sp"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Sign Up"
                android:textColor="#FE724C"
                android:textFontWeight="500"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="HardcodedText,UnusedAttribute" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>