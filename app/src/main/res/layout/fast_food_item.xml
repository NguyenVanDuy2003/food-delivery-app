<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="60px"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border">

            <!-- Pizza Image -->

            <!-- Price on top of image -->



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/piza"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundimageview"/>



            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background"
                android:text="$10.35"
                android:textColor="#FF5733"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="4dp"/>

            <!-- Favorite Button on top of image -->
            <ImageButton
                android:id="@+id/imgbtnfavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:contentDescription="Favorite Icon"
                android:src="@drawable/ic_heart"
                app:tint="#D71818" />

            <LinearLayout
                android:id="@+id/lou2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="187dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tvratingF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"
                    android:textColor="#FFC107"/>

                <ImageView
                    android:id="@+id/imgbtnstar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFD700"
                    android:contentDescription="Star Icon" />

                <TextView
                    android:id="@+id/tvreviewsFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(25)"
                    android:textSize="14sp"
                    android:textColor="#888888"/>
            </LinearLayout>

        </RelativeLayout>



        <!-- Pizza Rating -->


        <!-- Pizza Name -->
        <TextView
            android:id="@+id/tvNameFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Hawaiian"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <!-- Pizza Ingredients -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken, Cheese and Pineapple"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
