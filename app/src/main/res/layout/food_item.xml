<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_border"
    android:layout_marginVertical="10dp"
    android:padding="8dp">

    <!-- Image view for the food item image -->
    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:src="@drawable/food_detail_placeholder"
        android:contentDescription="Food Image" />

    <!-- Vertical LinearLayout to stack name and price -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- Text view for the food name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="16sp" />

        <!-- Text view for the food price -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Vertical LinearLayout for update and delete buttons aligned to the right -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingStart="8dp">

        <!-- Button to update the food item -->
        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />

        <!-- Button to delete the food item -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>
