<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="97dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:text="Hình thức thanh toán"
            android:textAlignment="center"
            android:textColor="#F4944D"
            android:textSize="30dp"
            android:textStyle="bold" />
        <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="#BA5000"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_ThanhToanOnline"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF5722"
            android:text="Thanh toán online"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_ThanhToanKhiNhanHang"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="10dp"
            android:text="Thanh toán khi nhận hàng"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_quaylai"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Quay lại"
            android:backgroundTint="#A00E3A"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>